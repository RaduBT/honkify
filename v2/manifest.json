{
"manifest_version": 2,
    "name": "Detrumpify2",
    "short_name": "Detrumpify2",
    "description": "Replaces references to Donald Trump with more accurate descriptions.",
    "author": "Dave Jacobowitz",
    "options_ui": {
      "page": "options.html",
      "chrome_style": true
    },
    "version": "1.1.9",
    "content_security_policy": "script-src 'self'; connect-src https://*.dropbox.com https://dl.dropboxusercontent.com https://toolsofourtools.org http://localhost:8000 'self'; object-src 'self'",
    "permissions": [
        "https://dropbox.com/",
        "https://dl.dropboxusercontent.com/",
        "http://toolsofourtools.org/",
        "https://toolsofourtools.org/",
        "storage"
    ],
    "background": {
      "persistent": false,
      "scripts": [ "event.js" ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "defaults.js", "shared.js", "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "128": "drumpf-128.png",
        "200": "drumpf-200.png",
        "400": "drumpf-200.png"
    }
}
